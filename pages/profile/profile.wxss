/* pages/profile/profile.wxss */
.profile-container {
  min-height: 100vh;
  background-color: #f9fafb;
  padding-bottom: 100px;
}

/* 用户信息头部 */
.profile-header {
  position: relative;
  overflow: hidden;
  background: linear-gradient(135deg, #10b981, #059669);
  padding: 40px 0 120px;
}

/* 背景装饰 */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.bg-blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(40px);
  opacity: 0.3;
}

.blob-1 {
  width: 120px;
  height: 120px;
  background: white;
  top: -60px;
  right: -60px;
}

.blob-2 {
  width: 80px;
  height: 80px;
  background: rgba(255, 255, 255, 0.3);
  bottom: -40px;
  left: -40px;
}

/* 头部内容 */
.header-content {
  position: relative;
  z-index: 10;
  padding: 0 32px;
}

.logout-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 40px;
  height: 40px;
  border-radius: 20px;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.logout-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.logout-icon {
  font-size: 16px;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  gap: 20px;
  margin-bottom: 32px;
}

.avatar-container {
  position: relative;
  width: 80px;
  height: 80px;
}

.user-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 3px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
  transition: transform 0.2s ease;
}

.avatar-container:active .user-avatar {
  transform: scale(1.05);
}

.vip-badge {
  position: absolute;
  bottom: -2px;
  right: -2px;
  width: 24px;
  height: 24px;
  background: #fbbf24;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2px solid white;
  box-shadow: 0 2px 8px rgba(251, 191, 36, 0.3);
}

.vip-icon {
  font-size: 12px;
}

/* 头像编辑按钮 */
.avatar-edit-btn {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 28px;
  height: 28px;
  background: linear-gradient(135deg, #10b981, #059669);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2px solid white;
  box-shadow: 0 2px 8px rgba(16, 185, 129, 0.4);
  transition: all 0.2s ease;
}

.avatar-edit-btn:active {
  transform: scale(0.95);
}

.camera-icon {
  font-size: 12px;
}

.user-details {
  flex: 1;
}

/* 用户名行（包含编辑图标） */
.username-row {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 8px;
}

.user-name {
  font-size: 24px;
  font-weight: 700;
  color: white;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

/* 昵称编辑图标 */
.nickname-edit-icon {
  width: 24px;
  height: 24px;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(8px);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.nickname-edit-icon:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.edit-icon {
  font-size: 10px;
}

.vip-tag {
  display: inline-flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(8px);
  border-radius: 16px;
  padding: 6px 12px;
  font-size: 12px;
  font-weight: 600;
  color: white;
  border: 1px solid rgba(255, 255, 255, 0.3);
}

/* 统计卡片 */
.stats-card {
  position: relative;
  background: white;
  border-radius: 20px;
  padding: 24px 32px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-around;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  transition: all 0.2s ease;
  cursor: pointer;
}

.stat-item:active {
  transform: scale(0.95);
  opacity: 0.7;
}

.stat-number {
  font-size: 20px;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 4px;
}

.stat-label {
  font-size: 10px;
  color: #6b7280;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.stat-divider {
  width: 1px;
  height: 40px;
  background-color: #f3f4f6;
}

/* 设置区域 */
.settings-section {
  margin-top: 80px;
  padding: 0 24px;
}

.settings-card {
  background: white;
  border-radius: 24px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  margin-bottom: 24px;
  border: 1px solid #f3f4f6;
}

/* 其他设置 */
.settings-menu {
  padding: 8px 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 20px 24px;
  transition: all 0.2s ease;
}

.menu-item:active {
  background-color: #f9fafb;
}

.menu-icon {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16px;
  font-size: 16px;
}

.menu-text {
  flex: 1;
  font-size: 14px;
  color: #1f2937;
}

.menu-arrow {
  font-size: 12px;
  color: #9ca3af;
  font-weight: 600;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 32px 16px;
}

.version-info text {
  font-size: 10px;
  color: #d1d5db;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-weight: 300;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .header-content {
    padding: 0 20px;
  }
  
  .settings-section {
    padding: 0 16px;
  }
  
  .menu-item {
    padding: 16px 20px;
  }
}

/* 昵称编辑弹窗 */
.nickname-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32px;
}

.nickname-modal-content {
  background: white;
  border-radius: 20px;
  padding: 32px 24px;
  max-width: 320px;
  width: 100%;
  box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
  animation: modalSlideUp 0.3s ease-out;
}

.nickname-modal-title {
  display: block;
  font-size: 18px;
  font-weight: 700;
  color: #1f2937;
  text-align: center;
  margin-bottom: 20px;
}

.nickname-input {
  width: 100%;
  padding: 12px 16px;
  border: 1px solid #e5e7eb;
  border-radius: 12px;
  font-size: 14px;
  color: #1f2937;
  background: #f9fafb;
  margin-bottom: 24px;
  transition: all 0.2s ease;
}

.nickname-input:focus {
  border-color: #10b981;
  background: white;
}

.nickname-modal-actions {
  display: flex;
  gap: 12px;
}

.nickname-modal-btn {
  flex: 1;
  padding: 12px;
  border-radius: 12px;
  text-align: center;
  font-size: 14px;
  font-weight: 600;
  transition: all 0.2s ease;
}

.nickname-modal-btn.cancel {
  background: #f3f4f6;
  color: #6b7280;
}

.nickname-modal-btn.cancel:active {
  background: #e5e7eb;
}

.nickname-modal-btn.confirm {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
}

.nickname-modal-btn.confirm:active {
  transform: scale(0.98);
  box-shadow: 0 2px 8px rgba(16, 185, 129, 0.3);
}

/* 健康语录样式 */
.health-quote-section {
  margin: -60px 32px 20px;
  position: relative;
  z-index: 20;
}

.health-quote-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16px;
  padding: 20px;
  box-shadow: 0 8px 32px rgba(102, 126, 234, 0.3);
  display: flex;
  align-items: flex-start;
  gap: 16px;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.health-quote-card:active {
  transform: scale(0.98);
  box-shadow: 0 4px 16px rgba(102, 126, 234, 0.4);
}

.health-quote-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
  pointer-events: none;
}

.quote-icon {
  font-size: 24px;
  opacity: 0.8;
  flex-shrink: 0;
  margin-top: 2px;
}

.quote-content {
  flex: 1;
  position: relative;
  z-index: 1;
}

.quote-text {
  display: block;
  color: white;
  font-size: 16px;
  font-weight: 500;
  line-height: 1.6;
  margin-bottom: 8px;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

.quote-author {
  display: block;
  color: rgba(255, 255, 255, 0.8);
  font-size: 14px;
  font-weight: 400;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

.refresh-btn {
  width: 32px;
  height: 32px;
  border-radius: 16px;
  background: rgba(255, 255, 255, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  flex-shrink: 0;
  position: relative;
  z-index: 1;
}

.refresh-btn:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.9);
}

.refresh-icon {
  font-size: 14px;
  color: white;
  opacity: 0.9;
}