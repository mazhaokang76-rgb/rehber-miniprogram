/* pages/community/community.wxss */
.community-container {
  min-height: 100vh;
  background-color: #f9fafb;
  padding-bottom: 100px;
}

/* 顶部导航 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(16, 185, 129, 0.1);
}

.header-content {
  max-width: 750px;
  margin: 0 auto;
  height: 88px;
  padding: 0 24px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-actions {
  display: flex;
  gap: 12px;
}

.tab-btn {
  padding: 8px 16px;
  border-radius: 20px;
  font-size: 14px;
  font-weight: 600;
  color: #6b7280;
  background-color: transparent;
  transition: all 0.3s ease;
}

.tab-btn.active {
  color: #10b981;
  background-color: rgba(16, 185, 129, 0.1);
}

.favorite-badge-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  gap: 6px;
}

.favorite-badge {
  min-width: 18px;
  height: 18px;
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  font-size: 10px;
  font-weight: 700;
  border-radius: 9px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 6px;
  box-shadow: 0 2px 4px rgba(16, 185, 129, 0.3);
}

.title-section {
  display: flex;
  align-items: center;
  gap: 12px;
}

.page-title {
  font-size: 18px;
  font-weight: 700;
  color: #1f2937;
}

.live-tag {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 10px;
  font-weight: 600;
  color: #10b981;
  background-color: rgba(16, 185, 129, 0.1);
  padding: 4px 8px;
  border-radius: 12px;
  border: 1px solid rgba(16, 185, 129, 0.2);
}

.live-dot {
  width: 6px;
  height: 6px;
  background-color: #10b981;
  border-radius: 50%;
  animation: pulse 2s infinite;
}

.add-btn {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  background: linear-gradient(135deg, #10b981, #059669);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4);
  transition: all 0.2s ease;
}

.add-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2px 8px rgba(16, 185, 129, 0.3);
}

.add-icon {
  font-size: 20px;
  color: white;
  font-weight: 600;
}

/* 瀑布流容器 */
.waterfall-container {
  padding: 120px 16px 32px;
  max-width: 750px;
  margin: 0 auto;
}

.waterfall-list {
  columns: 2;
  column-gap: 16px;
}

.waterfall-item {
  break-inside: avoid;
  margin-bottom: 16px;
  animation: fadeInUp 0.6s ease-out;
  animation-fill-mode: both;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 活动卡片 */
.activity-card {
  background-color: white;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.activity-card:active {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
}

/* 活动图片 */
.activity-image {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.activity-img {
  width: 100%;
  height: auto;
  display: block;
  transition: transform 0.3s ease;
}

.activity-card:active .activity-img {
  transform: scale(1.02);
}

.location-tag {
  position: absolute;
  left: 12px;
  right: 12px;
  bottom: 12px;
  display: flex;
  align-items: center;
  gap: 6px;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(8px);
  border-radius: 12px;
  padding: 8px 12px;
}

.location-icon {
  font-size: 12px;
}

.location-text {
  font-size: 10px;
  color: white;
  font-weight: 500;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 活动内容 */
.activity-content {
  padding: 16px;
}

.activity-title {
  font-size: 14px;
  font-weight: 700;
  color: #1f2937;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 12px;
}

.activity-time {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 12px;
  color: #10b981;
  background-color: rgba(16, 185, 129, 0.1);
  padding: 6px 12px;
  border-radius: 12px;
  font-weight: 600;
  margin-bottom: 16px;
}

.time-icon {
  font-size: 10px;
}

/* 活动统计 */
.activity-stats {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 12px;
  border-top: 1px solid #f3f4f6;
}

.organizer-info {
  display: flex;
  align-items: center;
  gap: 8px;
}

.organizer-avatar {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  border: 1px solid #e5e7eb;
}

.organizer-name {
  font-size: 10px;
  color: #6b7280;
  font-weight: 500;
  max-width: 60px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.activity-actions {
  display: flex;
  align-items: center;
  gap: 12px;
}

.like-btn {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 4px 8px;
  border-radius: 12px;
  transition: all 0.2s ease;
}

.like-btn:active {
  background-color: rgba(239, 68, 68, 0.1);
  transform: scale(1.05);
}

.like-icon {
  font-size: 12px;
}

.like-count {
  font-size: 10px;
  color: #6b7280;
  font-weight: 500;
}

/* 收藏按钮 */
.favorite-btn {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 6px 12px;
  border-radius: 16px;
  background-color: rgba(16, 185, 129, 0.1);
  border: 1px solid rgba(16, 185, 129, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.favorite-btn:active {
  transform: scale(0.95);
}

.favorite-btn.favorited {
  background: linear-gradient(135deg, #10b981, #059669);
  border-color: #10b981;
  box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
  animation: heartbeat 0.6s ease-in-out;
}

.favorite-icon {
  font-size: 11px;
  font-weight: 600;
  color: #10b981;
  transition: color 0.3s ease;
}

.favorite-btn.favorited .favorite-icon {
  color: white;
}

@keyframes heartbeat {
  0%, 100% {
    transform: scale(1);
  }
  25% {
    transform: scale(1.1);
  }
  50% {
    transform: scale(1);
  }
  75% {
    transform: scale(1.05);
  }
}

/* 分享按钮 */
.share-btn {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 6px 12px;
  border-radius: 16px;
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(5, 150, 105, 0.05));
  border: 1px solid rgba(16, 185, 129, 0.15);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(8px);
}

.share-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #10b981, #059669);
  box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
}

.share-icon {
  font-size: 11px;
  font-weight: 600;
  color: #10b981;
  transition: color 0.3s ease;
}

.share-btn:active .share-icon {
  color: white;
}

/* 空状态 */
.empty-state {
  grid-column: 1 / -1;
  text-align: center;
  padding: 80px 32px;
}

.empty-icon {
  font-size: 48px;
  margin-bottom: 16px;
  opacity: 0.5;
}

.empty-text {
  font-size: 16px;
  color: #6b7280;
  font-weight: 600;
  margin-bottom: 8px;
  display: block;
}

.empty-subtitle {
  font-size: 14px;
  color: #9ca3af;
}

/* 加载状态 */
.load-more, .no-more {
  text-align: center;
  padding: 24px 16px;
}

.loading-spinner {
  width: 24px;
  height: 24px;
  border: 2px solid #e5e7eb;
  border-top: 2px solid #10b981;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 8px;
}

.loading-text, .no-more text {
  font-size: 12px;
  color: #9ca3af;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .waterfall-list {
    columns: 1;
  }
  
  .waterfall-item {
    margin-bottom: 12px;
  }
  
  .header-content {
    padding: 0 16px;
    height: 80px;
  }
  
  .waterfall-container {
    padding: 100px 12px 24px;
  }
}