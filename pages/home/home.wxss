/* pages/home/home.wxss */
.home-container {
  min-height: 100vh;
  background-color: #f8fafc;
  padding-bottom: 100px; /* 为底部导航留出空间 */
}

/* 顶部导航 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(16, 185, 129, 0.1);
}

.header-content {
  max-width: 750px;
  margin: 0 auto;
  height: 88px;
  padding: 0 32px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.logo-text {
  font-size: 20px;
  font-weight: 700;
  color: #10b981;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 24px;
}

.search-btn, .notification-btn {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  background-color: rgba(16, 185, 129, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  position: relative;
}

.search-btn:active, .notification-btn:active {
  transform: scale(0.95);
  background-color: rgba(16, 185, 129, 0.2);
}

.icon {
  font-size: 12px;
  font-weight: 600;
  color: #10b981;
}

.notification-badge {
  position: absolute;
  top: 6px;
  right: 6px;
  min-width: 18px;
  height: 18px;
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: white;
  font-size: 10px;
  font-weight: 700;
  border-radius: 9px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 6px;
  border: 2px solid white;
  box-shadow: 0 2px 4px rgba(239, 68, 68, 0.4);
  animation: pulse-badge 2s infinite;
}

@keyframes pulse-badge {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

/* 欢迎信息 */
.greeting {
  padding: 88px 32px 24px;
}

.greeting-text {
  display: block;
  font-size: 24px;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 8px;
}

.user-name {
  color: #10b981;
}

.greeting-subtitle {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #6b7280;
  font-weight: 400;
}

.pulse-dot {
  display: inline-block;
  width: 8px;
  height: 8px;
  background-color: #10b981;
  border-radius: 50%;
  margin-left: 8px;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(0.95);
    box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.7);
  }
  
  70% {
    transform: scale(1);
    box-shadow: 0 0 0 10px rgba(16, 185, 129, 0);
  }
  
  100% {
    transform: scale(0.95);
    box-shadow: 0 0 0 0 rgba(16, 185, 129, 0);
  }
}

/* 区域样式 */
.section {
  padding: 0 32px;
  margin-bottom: 48px;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24px;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 18px;
  font-weight: 700;
  color: #1f2937;
}

.title-icon {
  width: 32px;
  height: 32px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
  font-size: 14px;
}

.video-icon {
  background-color: rgba(16, 185, 129, 0.1);
}

.news-icon {
  background-color: rgba(59, 130, 246, 0.1);
}

.subscription-tag {
  font-size: 10px;
  font-weight: 600;
  color: #10b981;
  background-color: rgba(16, 185, 129, 0.1);
  padding: 4px 8px;
  border-radius: 12px;
  border: 1px solid rgba(16, 185, 129, 0.2);
}

/* 视频区域 */
.video-scroll {
  width: 100%;
  white-space: nowrap;
}

.video-list {
  display: flex;
  gap: 16px;
  padding-bottom: 16px;
}

.video-card {
  flex: 0 0 280px;
  background-color: white;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.video-card:active {
  transform: translateY(-2px);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
}

.video-thumbnail {
  position: relative;
  width: 100%;
  height: 160px;
  overflow: hidden;
}

.video-image {
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease;
}

.video-card:active .video-image {
  transform: scale(1.05);
}

.video-duration {
  position: absolute;
  bottom: 12px;
  right: 12px;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  font-size: 10px;
  font-weight: 600;
  padding: 4px 8px;
  border-radius: 8px;
  backdrop-filter: blur(4px);
}

.video-play-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.video-card:active .video-play-overlay {
  opacity: 1;
}

.play-button {
  width: 48px;
  height: 48px;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: scale(0.8);
  transition: transform 0.3s ease;
}

.video-card:active .play-button {
  transform: scale(1);
}

.play-icon {
  font-size: 18px;
  color: #10b981;
  margin-left: 2px;
}

.video-info {
  padding: 16px;
}

.video-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8px;
}

.video-category {
  font-size: 10px;
  font-weight: 700;
  color: #10b981;
  background-color: rgba(16, 185, 129, 0.1);
  padding: 2px 8px;
  border-radius: 8px;
}

.video-views {
  font-size: 10px;
  color: #9ca3af;
}

.video-title {
  font-size: 14px;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 资讯区域 */
.news-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.news-card {
  background-color: white;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  display: flex;
  transition: all 0.3s ease;
}

.news-card:active {
  transform: translateY(-2px);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
}

.news-image {
  width: 120px;
  height: 120px;
  flex-shrink: 0;
  overflow: hidden;
}

.news-image image {
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease;
}

.news-card:active .news-image image {
  transform: scale(1.05);
}

.news-content {
  flex: 1;
  padding: 16px 20px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.news-meta {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 12px;
}

.news-category {
  font-size: 10px;
  font-weight: 700;
  color: #3b82f6;
  background-color: rgba(59, 130, 246, 0.1);
  padding: 2px 8px;
  border-radius: 8px;
}

.news-date {
  font-size: 10px;
  color: #9ca3af;
}

.news-title {
  font-size: 14px;
  font-weight: 700;
  color: #1f2937;
  line-height: 1.4;
  margin-bottom: 8px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.news-summary {
  font-size: 12px;
  color: #6b7280;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 空状态 */
.empty-state {
  flex: 1;
  padding: 48px 32px;
  text-align: center;
  color: #9ca3af;
  background-color: rgba(249, 250, 251, 0.8);
  border: 1px dashed #d1d5db;
  border-radius: 16px;
  font-size: 14px;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80px 32px;
}

.loading-spinner {
  width: 32px;
  height: 32px;
  border: 2px solid #e5e7eb;
  border-top: 2px solid #10b981;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16px;
}

.loading-text {
  font-size: 14px;
  color: #6b7280;
}

/* 偏好引导 */
.preference-guide {
  margin: 0 32px 24px;
  padding: 20px;
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(5, 150, 105, 0.05));
  border-radius: 16px;
  border: 1px solid rgba(16, 185, 129, 0.2);
  display: flex;
  align-items: center;
  gap: 16px;
}

.guide-icon {
  width: 44px;
  height: 44px;
  background: linear-gradient(135deg, #10b981, #059669);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  font-weight: 700;
  color: white;
  flex-shrink: 0;
}

.guide-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.guide-title {
  font-size: 15px;
  font-weight: 600;
  color: #1f2937;
}

.guide-desc {
  font-size: 12px;
  color: #6b7280;
  line-height: 1.4;
}

.guide-action {
  padding: 8px 20px;
  background: linear-gradient(135deg, #10b981, #059669);
  border-radius: 12px;
  color: white;
  font-size: 13px;
  font-weight: 600;
  transition: all 0.2s ease;
  box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
}

.guide-action:active {
  transform: scale(0.95);
  box-shadow: 0 2px 8px rgba(16, 185, 129, 0.3);
}

/* 内容切换Tab */
.content-tabs {
  margin: 0 32px 24px;
  display: flex;
  background: white;
  border-radius: 12px;
  padding: 4px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.tab-item {
  flex: 1;
  padding: 12px;
  text-align: center;
  font-size: 14px;
  font-weight: 600;
  color: #6b7280;
  border-radius: 8px;
  transition: all 0.3s ease;
  position: relative;
}

.tab-item.active {
  color: #10b981;
  background: rgba(16, 185, 129, 0.1);
}

.tab-indicator {
  position: absolute;
  bottom: 4px;
  left: 50%;
  transform: translateX(-50%);
  width: 24px;
  height: 3px;
  background: linear-gradient(135deg, #10b981, #059669);
  border-radius: 2px;
}

/* 推荐标签 */
.recommend-badge {
  position: absolute;
  top: 8px;
  right: 8px;
  padding: 4px 10px;
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  font-size: 10px;
  font-weight: 700;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(16, 185, 129, 0.4);
}

.recommend-badge-news {
  position: absolute;
  top: 12px;
  right: 12px;
  padding: 4px 10px;
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  font-size: 10px;
  font-weight: 700;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(16, 185, 129, 0.4);
}

/* 内容标签 */
.content-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
  margin-top: 8px;
}

.content-tags .tag {
  padding: 4px 10px;
  background: rgba(16, 185, 129, 0.1);
  color: #10b981;
  font-size: 10px;
  font-weight: 600;
  border-radius: 8px;
  border: 1px solid rgba(16, 185, 129, 0.2);
}

/* 动画 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .header-content {
    padding: 0 20px;
    height: 80px;
  }
  
  .greeting {
    padding: 68px 20px 24px;
  }
  
  .section {
    padding: 0 20px;
  }
  
  .video-card {
    flex: 0 0 240px;
  }
  
  .news-image {
    width: 100px;
    height: 100px;
  }
  
  .news-content {
    padding: 12px 16px;
  }
}