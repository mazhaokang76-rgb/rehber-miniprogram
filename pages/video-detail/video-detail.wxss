/* video-detail.wxss */
.container {
  padding: 0;
  background: linear-gradient(to bottom, #f0fdf4, #f8fafc);
  min-height: 100vh;
}

/* 视频播放器区域 */
.video-wrapper {
  position: relative;
  width: 100%;
  height: 420rpx;
  background: linear-gradient(135deg, #064e3b 0%, #047857 100%);
  overflow: hidden;
}

.video-player {
  width: 100%;
  height: 100%;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 420rpx;
  background: linear-gradient(135deg, #064e3b 0%, #047857 100%);
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 网络提示 */
.network-tip {
  position: absolute;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 16rpx 32rpx;
  background: rgba(251, 191, 36, 0.95);
  backdrop-filter: blur(10rpx);
  color: #78350f;
  font-size: 26rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  z-index: 100;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateX(-50%) translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
}

/* 返回按钮 */
.back-button {
  position: fixed;
  top: 80rpx;
  left: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
  transition: all 0.3s ease;
}

.back-button:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 1);
}

.back-icon {
  font-size: 40rpx;
  color: #1e293b;
}

/* 视频信息卡片 */
.video-info {
  margin: 30rpx;
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(16, 185, 129, 0.1);
  border: 2rpx solid rgba(16, 185, 129, 0.1);
}

.video-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #064e3b;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.video-meta {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid rgba(16, 185, 129, 0.1);
}

.category {
  padding: 10rpx 20rpx;
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: white;
  font-size: 24rpx;
  font-weight: 500;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(16, 185, 129, 0.3);
}

.duration {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 26rpx;
  color: #047857;
  font-weight: 500;
}

.views {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 26rpx;
  color: #6ee7b7;
  font-weight: 500;
}

.video-description {
  font-size: 30rpx;
  color: #065f46;
  line-height: 1.7;
  margin-bottom: 30rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.btn-favorite {
  flex: 1;
  padding: 28rpx;
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.3);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.btn-favorite.favorited {
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
  box-shadow: 0 4rpx 16rpx rgba(251, 191, 36, 0.3);
}

.btn-favorite:active {
  transform: scale(0.98);
}

.btn-share {
  flex: 1;
  padding: 28rpx;
  background: rgba(16, 185, 129, 0.1);
  color: #059669;
  border: 2rpx solid rgba(16, 185, 129, 0.2);
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.btn-share:active {
  background: rgba(16, 185, 129, 0.2);
  transform: scale(0.98);
}

/* 相关视频推荐 */
.related-videos {
  margin: 30rpx;
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(16, 185, 129, 0.1);
  border: 2rpx solid rgba(16, 185, 129, 0.1);
}

.related-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #064e3b;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.related-title::before {
  content: '';
  width: 6rpx;
  height: 32rpx;
  background: linear-gradient(to bottom, #10b981, #059669);
  border-radius: 3rpx;
}

.related-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.related-video-item {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background: rgba(240, 253, 244, 0.5);
  border-radius: 16rpx;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.related-video-item:active {
  background: rgba(240, 253, 244, 0.8);
  border-color: rgba(16, 185, 129, 0.3);
  transform: scale(0.98);
}

.related-thumbnail {
  width: 200rpx;
  height: 140rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
  position: relative;
  overflow: hidden;
}

.related-thumbnail image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.play-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.play-icon::after {
  content: '';
  width: 0;
  height: 0;
  border-left: 20rpx solid #10b981;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
  margin-left: 4rpx;
}

.related-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.related-video-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #064e3b;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.related-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.related-duration {
  font-size: 24rpx;
  color: #059669;
  font-weight: 500;
}

.related-views {
  font-size: 24rpx;
  color: #6ee7b7;
}

/* 空状态 */
.empty-state {
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  color: #d1fae5;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #94a3b8;
}

/* 全屏状态下隐藏某些元素 */
.fullscreen .back-button {
  display: none;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .video-wrapper {
    height: 380rpx;
  }
  
  .video-title {
    font-size: 32rpx;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .btn-favorite,
  .btn-share {
    width: 100%;
  }
}
