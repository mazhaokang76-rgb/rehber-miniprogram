/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ecfdf5, #d1fae5);
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(40px);
  opacity: 0.7;
  animation: blob 20s infinite ease-in-out;
}

.blob-1 {
  width: 200px;
  height: 200px;
  background: #10b981;
  top: -10%;
  right: -10%;
  animation-delay: 0s;
}

.blob-2 {
  width: 180px;
  height: 180px;
  background: #34d399;
  bottom: -10%;
  left: -10%;
  animation-delay: 2s;
}

.blob-3 {
  width: 120px;
  height: 120px;
  background: #fbbf24;
  top: 40%;
  left: 20%;
  animation-delay: 4s;
  animation: pulse 3s infinite;
}

@keyframes blob {
  0%, 100% {
    transform: translate(0px, 0px) scale(1);
  }
  33% {
    transform: translate(30px, -50px) scale(1.1);
  }
  66% {
    transform: translate(-20px, 20px) scale(0.9);
  }
}

/* 主要内容 */
.login-content {
  position: relative;
  z-index: 10;
  padding: 80px 24px 40px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-height: 100vh;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 60px;
}

.logo-container {
  margin: 0 auto 24px;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 24px;
  padding: 24px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8px 32px rgba(16, 185, 129, 0.2);
  backdrop-filter: blur(8px);
  border: 1px solid rgba(255, 255, 255, 0.3);
  width: fit-content;
}

.logo-text {
  font-size: 28px;
  font-weight: 700;
  color: #047857;
  margin-bottom: 4px;
  letter-spacing: -0.5px;
}

.logo-subtitle {
  font-size: 14px;
  font-weight: 500;
  color: #059669;
  letter-spacing: 1px;
}

.tagline {
  color: #059669;
  font-size: 16px;
  font-weight: 500;
  letter-spacing: 0.5px;
}

/* 表单容器 */
.form-container {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(16px);
  border-radius: 24px;
  padding: 32px 24px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.3);
  margin-bottom: 40px;
}

/* 微信一键登录按钮 */
.wechat-login-btn {
  width: 100%;
  padding: 16px;
  border-radius: 16px;
  background: linear-gradient(135deg, #10b981, #0d9488);
  color: white;
  font-size: 16px;
  font-weight: 600;
  border: none;
  outline: none;
  position: relative;
  transition: all 0.3s ease;
  box-shadow: 0 4px 16px rgba(16, 185, 129, 0.4);
  margin-bottom: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-login-btn:hover:not([disabled]) {
  background: linear-gradient(135deg, #059669, #0f766e);
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(16, 185, 129, 0.5);
}

.wechat-login-btn:active:not([disabled]) {
  transform: translateY(0);
}

.wechat-login-btn[disabled] {
  opacity: 0.6;
  transform: none;
  box-shadow: 0 2px 8px rgba(16, 185, 129, 0.2);
}

.wechat-login-btn.loading {
  background: linear-gradient(135deg, #6b7280, #4b5563);
}

.login-btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.wechat-icon {
  font-size: 20px;
  margin-right: 8px;
  color: white;
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn-text {
  font-size: 16px;
  font-weight: 600;
  color: white;
  flex: 1;
  text-align: center;
}

.arrow-icon {
  font-size: 16px;
  margin-left: 8px;
  color: white;
  transition: transform 0.2s ease;
}

.wechat-login-btn:hover:not([disabled]) .arrow-icon {
  transform: translateX(2px);
}

.loading-spinner {
  width: 20px;
  height: 20px;
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-top: 2px solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 用户协议提示 */
.agreement-tip {
  text-align: center;
  padding: 16px;
  background: rgba(16, 185, 129, 0.05);
  border-radius: 12px;
  border: 1px solid rgba(16, 185, 129, 0.1);
}

.tip-text {
  font-size: 12px;
  color: #6b7280;
}

.link-text {
  font-size: 12px;
  color: #10b981;
  font-weight: 600;
  margin: 0 2px;
}

/* 版权信息 */
.copyright {
  text-align: center;
  margin-top: 20px;
}

.copyright text {
  font-size: 12px;
  color: #9ca3af;
  font-weight: 300;
}

/* 动画 */
.animate-fadeIn {
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.6;
  }
  50% {
    opacity: 0.8;
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .login-content {
    padding: 60px 20px 30px;
  }
  
  .form-container {
    padding: 24px 20px;
  }
  
  .logo-container {
    padding: 20px;
  }
  
  .logo-text {
    font-size: 24px;
  }
}

/* 健康语录样式 */
.quote-section {
  margin: 20px auto 0;
  padding: 0 20px;
  max-width: 400px;
}

.quote-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16px;
  padding: 24px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(8px);
  border: 1px solid rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: flex-start;
  gap: 16px;
  transition: all 0.3s ease;
  animation: fadeIn 0.6s ease-out;
}

.quote-card:active {
  transform: scale(0.98);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
}

.quote-icon {
  font-size: 20px;
  opacity: 0.8;
  flex-shrink: 0;
  margin-top: 2px;
}

.quote-content {
  flex: 1;
}

.quote-text {
  display: block;
  color: #374151;
  font-size: 15px;
  font-weight: 500;
  line-height: 1.6;
  margin-bottom: 8px;
}

.quote-author {
  display: block;
  color: #6b7280;
  font-size: 13px;
  font-weight: 400;
}