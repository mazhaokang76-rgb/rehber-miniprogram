/* news-detail.wxss */
.container {
  padding: 0;
  background-color: #f8fafc;
  min-height: 100vh;
}

.content-wrapper {
  padding: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.meta-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e2e8f0;
}

.author {
  font-size: 28rpx;
  color: #64748b;
  margin-right: 20rpx;
}

.date {
  font-size: 28rpx;
  color: #94a3b8;
}

.category {
  margin-left: auto;
  padding: 8rpx 16rpx;
  background-color: #10b981;
  color: white;
  font-size: 24rpx;
  border-radius: 20rpx;
}

.cover-image {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.summary {
  font-size: 32rpx;
  color: #475569;
  line-height: 1.6;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f1f5f9;
  border-radius: 12rpx;
}

.content {
  font-size: 30rpx;
  color: #334155;
  line-height: 1.8;
}

.content p {
  margin-bottom: 20rpx;
}

.back-button {
  position: fixed;
  top: 80rpx;
  left: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

.back-icon {
  font-size: 40rpx;
  color: #1e293b;
}