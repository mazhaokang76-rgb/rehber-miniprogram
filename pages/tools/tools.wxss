/* pages/tools/tools.wxss */
.tools-container {
  min-height: 100vh;
  background-color: #f8fafc;
  padding-bottom: 100px;
}

/* 顶部导航 */
.header {
  background: white;
  border-bottom: 1px solid #e5e7eb;
}

.header-content {
  max-width: 750px;
  margin: 0 auto;
  padding: 48px 32px 32px;
}

.page-title {
  display: block;
  font-size: 28px;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 8px;
}

.page-subtitle {
  display: block;
  font-size: 14px;
  color: #6b7280;
}

/* 工具列表 */
.tools-grid {
  padding: 24px 32px;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.tool-card {
  background: white;
  border-radius: 20px;
  padding: 24px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  gap: 20px;
  transition: all 0.3s ease;
}

.tool-card:active {
  transform: translateY(-4px);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
}

.tool-icon {
  width: 64px;
  height: 64px;
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.calorie-icon {
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
}

.heartrate-icon {
  background: linear-gradient(135deg, #ef4444, #dc2626);
}

.icon-text {
  font-size: 32px;
}

.tool-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.tool-name {
  font-size: 16px;
  font-weight: 700;
  color: #1f2937;
}

.tool-desc {
  font-size: 13px;
  color: #6b7280;
  line-height: 1.4;
}

.tool-arrow {
  font-size: 28px;
  color: #d1d5db;
  font-weight: 300;
}

/* 模态框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal.active {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: white;
  border-radius: 24px 24px 0 0;
  width: 100%;
  max-height: 80vh;
  overflow-y: auto;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.modal.active .modal-content {
  transform: translateY(0);
}

.modal-header {
  padding: 24px 24px 16px;
  border-bottom: 1px solid #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: sticky;
  top: 0;
  background: white;
  z-index: 10;
}

.modal-title {
  font-size: 18px;
  font-weight: 700;
  color: #1f2937;
}

.close-btn {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  color: #6b7280;
  line-height: 1;
  transition: all 0.2s ease;
}

.close-btn:active {
  background: #e5e7eb;
}

.modal-body {
  padding: 24px;
}

/* 表单 */
.form-group {
  margin-bottom: 24px;
}

.form-label {
  display: block;
  font-size: 14px;
  font-weight: 600;
  color: #374151;
  margin-bottom: 12px;
}

.form-input {
  width: 100%;
  padding: 14px 16px;
  border-radius: 12px;
  border: 1px solid #d1d5db;
  background-color: white;
  font-size: 16px;
  color: #1f2937;
  transition: all 0.2s ease;
}

.form-input:focus {
  border-color: #10b981;
  box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
}

.form-hint {
  display: block;
  font-size: 12px;
  color: #9ca3af;
  margin-top: 8px;
}

.radio-group {
  display: flex;
  gap: 12px;
}

.radio-item {
  flex: 1;
  padding: 12px;
  border-radius: 12px;
  border: 2px solid #d1d5db;
  background: white;
  text-align: center;
  font-size: 14px;
  font-weight: 600;
  color: #6b7280;
  transition: all 0.2s ease;
}

.radio-item.active {
  border-color: #10b981;
  background: rgba(16, 185, 129, 0.1);
  color: #10b981;
}

.picker-display {
  padding: 14px 16px;
  border-radius: 12px;
  border: 1px solid #d1d5db;
  background: white;
  font-size: 16px;
  color: #1f2937;
}

.calculate-btn {
  width: 100%;
  padding: 16px;
  border-radius: 12px;
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  font-size: 16px;
  font-weight: 700;
  border: none;
  margin-top: 32px;
  margin-bottom: 24px;
  transition: all 0.2s ease;
}

.calculate-btn:active {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
}

/* 结果显示 */
.result-box {
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(5, 150, 105, 0.05));
  border-radius: 16px;
  padding: 24px;
  border: 2px solid rgba(16, 185, 129, 0.2);
}

.result-label {
  display: block;
  font-size: 13px;
  font-weight: 600;
  color: #059669;
  margin-bottom: 8px;
}

.result-value {
  display: block;
  font-size: 36px;
  font-weight: 700;
  color: #10b981;
  margin-bottom: 24px;
}

.result-unit {
  font-size: 18px;
  color: #6b7280;
  font-weight: 600;
}

.result-tips {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
  margin-top: 16px;
  padding-top: 16px;
  border-top: 1px solid rgba(16, 185, 129, 0.2);
}

.tip-item {
  flex: 1;
  min-width: 80px;
  padding: 8px 12px;
  background: white;
  border-radius: 8px;
  font-size: 12px;
  color: #374151;
  text-align: center;
}

/* 心率区间 */
.hr-zones {
  margin-top: 24px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.hr-zone {
  background: white;
  border-radius: 12px;
  padding: 16px;
  border: 1px solid rgba(16, 185, 129, 0.2);
}

.zone-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.zone-name {
  font-size: 14px;
  font-weight: 700;
  color: #1f2937;
}

.zone-range {
  font-size: 14px;
  font-weight: 600;
  color: #10b981;
}

.zone-desc {
  font-size: 12px;
  color: #6b7280;
  line-height: 1.4;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .header-content {
    padding: 40px 20px 24px;
  }

  .tools-grid {
    padding: 24px 20px;
  }

  .tool-card {
    padding: 20px;
  }

  .tool-icon {
    width: 56px;
    height: 56px;
  }

  .icon-text {
    font-size: 28px;
  }

  .modal-body {
    padding: 20px;
  }
}
